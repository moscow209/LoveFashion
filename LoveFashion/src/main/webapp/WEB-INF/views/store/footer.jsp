<%--Scroll top --%>
<a id="yt-totop" href="#"></a>

<script type="text/javascript">
    var isShow =  false;
	$jsmart(function($) {
		$("#yt-totop").hide();
		$(function() {
			var wh = $(window).height();
			var whtml = $(document).height();
			//Scroll event
			$(window).scroll(function() {
				if ($(this).scrollTop() > whtml / 10) {
					$('#yt-totop').fadeIn();
				} else {
					$('#yt-totop').fadeOut();
				}
			});
			//Click button backTop
			$('#yt-totop').click(function() {
				$('body,html').animate({
					scrollTop : 0
				}, 800);
				return false;
			});
			//Show shopping cart
			jQuery(".mini-cartpro .btn-toggle").click(
					function() {
						Effect.toggle($$('.mini-cartpro .block-content')[0],'slide', {
									duration : 0.5
								});
						isShow = !isShow;
						(isShow) ? $$('.mini-cartpro .btn-toggle')[0]
								.addClassName('show')
								: $$('.mini-cartpro .btn-toggle')[0]
										.removeClassName('show');
			});
		});
	});
</script>

